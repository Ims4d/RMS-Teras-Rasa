<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
      .btn-check:checked + .btn {
        background-color: #ff5a00 !important;
        color: white !important;
      }
    </style>
  </head>
  <body class="vh-100 d-flex">
    <!-- Left: Login Form -->
    <div class="d-flex align-items-center justify-content-center flex-grow-1 p-4">
      <div class="w-100" style="max-width: 400px;">
        <div class="text-center mb-4">
          <img src="/img/teras-logo.png" alt="Teras Rasa Logo" width="80" class="rounded-circle mb-3">
          <h4><%= title %></h4>
        </div>
        <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
        <% } %>
        <form action="/login" method="POST">
          <div class="mb-3">
            <input type="text" class="form-control" id="username" name="username" placeholder="Username" required autofocus>
          </div>
          <div class="mb-3 position-relative">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            <span class="position-absolute top-50 end-0 translate-middle-y me-3" style="cursor: pointer;" onclick="togglePassword()">
              <i class="bi bi-eye" id="toggle-icon"></i>
            </span>
          </div>
          <div class="btn-group mb-3 w-100" role="group">
            <input type="radio" class="btn-check" name="role" id="koki" value="koki" required>
            <label class="btn btn-outline rounded-0 flex-fill"
                  for="koki"
                  style="--bs-btn-border-color: #ff5a00; --bs-btn-color: #ff5a00;">
              Koki
            </label>
            <input type="radio" class="btn-check" name="role" id="kasir" value="kasir">
            <label class="btn btn-outline rounded-0 flex-fill"
                  for="kasir"
                  style="--bs-btn-border-color: #ff5a00; --bs-btn-color: #ff5a00;">
              Kasir
            </label>
            <input type="radio" class="btn-check" name="role" id="pelayan" value="pelayan">
            <label class="btn btn-outline rounded-0 flex-fill"
                  for="pelayan"
                  style="--bs-btn-border-color: #ff5a00; --bs-btn-color: #ff5a00;">
              Pelayan
            </label>
          </div>
          <button type="submit" class="btn w-100 text-white" style="background-color: #ff5a00;">Login</button>
        </form>
      </div>
    </div>
    <!-- Right: Branding Background -->
    <div class="d-none d-md-block flex-grow-1" style="
      background-image: linear-gradient(rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.4)), url('/img/pattern.png');
      background-size: cover;
      background-position: center;
    "></div>
    <!-- Toggle Password Script -->
    <script src="/javascripts/login.js"></script>
  </body>
</html>
