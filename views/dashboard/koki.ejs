<!DOCTYPE html>
<html lang="id">
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap');
      body { font-family: "Quicksand", sans-serif }
    </style>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-sm bg-white">
      <div class="container">
        <h5 class="m-0"><%= title %></h5>
        <form action="koki/logout" method="post">
          <button type="submit" class="btn btn-danger">Logout</button>
        </form>
      </div>
    </nav>

    <div class="container p-2 pt-4">
      <!-- Stat card -->
      <div class="row mb-4">
        <div class="col d-flex align-items-center border rounded p-2 mx-2 bg-white">
          <h5 class="flex-grow-1 m-0">Pesanan Baru <i class="bi bi-cup-straw me-2"></i></h5>
          <h1 class="text-success m-0"><%= pesanan.filter(p => p.status_pesanan === 'BELUM_DIMASAK').length %></h1>
        </div>
        <div class="col d-flex align-items-center border rounded p-2 mx-2 bg-white">
          <h5 class="flex-grow-1 m-0">Sedang Dimasak <i class="bi bi-fire me-2"></i></h5>
          <h1 class="text-danger m-0"><%= pesanan.filter(p => p.status_pesanan === 'SEDANG_DIMASAK').length %></h1>
        </div>
        <div class="col d-flex align-items-center border rounded p-2 mx-2 bg-white">
          <h5 class="flex-grow-1 m-0">Siap Disajikan <i class="bi bi-check-lg me-2"></i></h5>
          <h1 class="text-success m-0"><%= pesanan.filter(p => p.status_pesanan === 'SIAP_DISAJIKAN').length %></h1>
        </div>
      </div>

      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-bs-toggle="tab" href="#antrian"><i class="bi bi-clock me-1"></i> Antrian Pesanan</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-bs-toggle="tab" href="#ketersediaan"><i class="bi bi-list-check me-1"></i> Kelola Ketersediaan</a>
        </li>
      </ul>
    </div>

    <!-- Tab panes -->
    <div class="tab-content">

      <div id="antrian" class="container tab-pane active"><br>
        <div class="row">
          <!-- Kolom antrian pesanan baru -->
          <div class="col">
            <h5 class="mb-3">Pesanan Baru</h5>
            <% pesanan.filter(p => p.status_pesanan === 'BELUM_DIMASAK').forEach(p => {
              const menuDalamPesanan = menuPesanan.filter(m => m.id_pesanan === p.id_pesanan);
              const adaYangTidakTersedia = menuDalamPesanan.some(m => m.ketersediaan === 'TIDAK_TERSEDIA'); %>
              <div class="border rounded p-2 mb-3 bg-white">
                <strong>Meja <%= p.id_meja %></strong><span class="float-end text-muted"><%= new Date(p.waktu_pesan).toLocaleString('id-ID') %></span>
                <div class="mt-2 mb-3">
                  <%- menuDalamPesanan.map(m => `${m.jumlah}x ${m.nama_menu}`).join('<br>') %>
                </div>
                <button class="btn btn-primary w-100" onclick="updateStatus('<%= p.id_pesanan %>', '<%= id_koki %>', 'SEDANG_DIMASAK')" <%= adaYangTidakTersedia ? 'disabled' : '' %>>
                  <%= adaYangTidakTersedia ? 'Tunggu Konfirmasi Pelayan' : 'Mulai Masak' %>
                </button>
              </div>
            <% }) %>
          </div>

          <!-- Sedang dimasak -->
          <div class="col">
            <h5 class="mb-3">Sedang Dimasak</h5>
            <% pesanan.filter(p => p.status_pesanan === 'SEDANG_DIMASAK').forEach(p => { %>
              <div class="border rounded p-2 mb-3 bg-white">
                <strong>Meja <%= p.id_meja %></strong> <span class="float-end text-muted"><%= new Date(p.waktu_pesan).toLocaleString('id-ID') %></span>
                <div class="mt-2 mb-3">
                  <%= menuPesanan.filter(m => m.id_pesanan === p.id_pesanan).map(m => `${m.jumlah}x ${m.nama_menu}`).join(', ') %>
                </div>
                <button class="btn btn-success w-100" onclick="updateStatus('<%= p.id_pesanan %>', '<%= id_koki %>', 'SIAP_DISAJIKAN')">Selesai Masak</button>
              </div>
            <% }) %>
          </div>
        </div>
      </div>

      <div id="ketersediaan" class="container tab-pane fade"><br>
        <% const belumDimasakId = pesanan.filter(p => p.status_pesanan === 'BELUM_DIMASAK').map(p => p.id_pesanan);
          const menuTersedia = menuPesanan.filter(m => belumDimasakId.includes(m.id_pesanan));
          const grouped = {};

          menuTersedia.forEach(m => {
            if (!grouped[m.id_pesanan]) grouped[m.id_pesanan] = [];
            grouped[m.id_pesanan].push(m);
          });

          for (const id_pesanan in grouped) {
            const pesananData = pesanan.find(p => p.id_pesanan == id_pesanan); %>
            <div class="border rounded p-2 mb-3 bg-white">
              <h6>Meja <%= pesananData.id_meja %> <span class="float-end text-muted"><%= pesananData.jam_pesan %></span></h6>
              <% grouped[id_pesanan].forEach(m => {
                if (m.ketersediaan === 'TERSEDIA'){ %>
                  <div class="d-flex justify-content-between align-items-center bg-warning p-2 rounded mb-2 border">
                    <strong><%= m.jumlah %>x <%= m.nama_menu %></strong>
                    <select class="form-select w-auto" onchange="updateKetersediaan('<%= m.id_menu %>', '<%= m.id_pesanan %>', this)">
                      <option value="TERSEDIA" <%= m.ketersediaan === 'TERSEDIA' ? 'selected' : '' %>>Tersedia</option>
                      <option value="TIDAK_TERSEDIA" <%= m.ketersediaan === 'TIDAK_TERSEDIA' ? 'selected' : '' %>>Tidak Tersedia</option>
                    </select>
                  </div>
                <% } %>
              <% }) %>
            </div>
        <% } %>
      </div>
    </div>

    <script src="/javascripts/koki.js"></script>
  </body>
</html>
