<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f9f9f9;
      font-family: 'Segoe UI', sans-serif;
      padding: 20px;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .logout-btn {
      background-color: #f44336;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 6px;
    }

    .stat-card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
      padding: 20px;
      flex: 1;
      text-align: center;
    }

    .stat-card span {
      font-size: 24px;
      font-weight: bold;
      display: block;
      margin-top: 10px;
    }

    .tabs {
      display: flex;
      margin-top: 30px;
      border-bottom: 2px solid #e0e0e0;
    }

    .tabs button {
      background: none;
      border: none;
      font-weight: 500;
      padding: 10px 20px;
      cursor: pointer;
    }

    .tabs button.active {
      border-bottom: 3px solid #27ae60;
      color: #27ae60;
    }

    .tab-content {
      display: none;
      margin-top: 20px;
    }

    .tab-content.active {
      display: block;
    }

    .pesanan-card {
      border-radius: 10px;
      padding: 15px;
      margin-bottom: 15px;
      background-color: #fff;
      box-shadow: 0 1px 4px rgba(0,0,0,0.05);
    }

    .bg-kuning {
      background-color: #fff7cc;
    }

    .bg-biru {
      background-color: #eaf4ff;
    }

    .bg-kuning select {
      background-color: #f9d923;
      color: #000;
    }

    .btn-kuning {
      background-color: #f9d923;
      border: none;
      color: #000;
    }

    .btn-hijau {
      background-color: #27ae60;
      border: none;
      color: #fff;
    }

    .btn-kuning:disabled {
      opacity: 0.6;
    }

    .row-gap {
      gap: 20px;
    }
  </style>
</head>
<body>

  <div class="top-bar">
    <h3><%= title %></h3>
    <form action="koki/logout" method="post">
      <button type="submit" class="logout-btn">Logout</button>
    </form>
  </div>

  <!-- STATISTIC CARDS -->
  <div class="d-flex justify-content-between row-gap flex-wrap mb-4">
    <div class="stat-card">
      <div><i class="bi bi-cup-straw me-2"></i>Pesanan Baru</div>
      <span class="text-success"><%= pesanan.filter(p => p.status_pesanan === 'BELUM_DIMASAK').length %></span>
    </div>
    <div class="stat-card">
      <div><i class="bi bi-fire me-2"></i>Sedang Dimasak</div>
      <span class="text-danger"><%= pesanan.filter(p => p.status_pesanan === 'SEDANG_DIMASAK').length %></span>
    </div>
    <div class="stat-card">
      <div><i class="bi bi-person-standing me-2"></i>Siap Disajikan</div>
      <span class="text-warning"><%= pesanan.filter(p => p.status_pesanan === 'SIAP_DISAJIKAN').length %></span>
    </div>
  </div>

  <!-- TABS -->
  <div class="tabs">
    <button id="btn-antrian" onclick="showTab('tab-antrian')" class="active">
      <i class="bi bi-clock me-1"></i> Antrian Pesanan
    </button>
    <button id="btn-ketersediaan" onclick="showTab('tab-ketersediaan')">
      <i class="bi bi-list-check me-1"></i> Kelola Ketersediaan
    </button>
  </div>

  <!-- TAB: ANTRIAN -->
  <div id="tab-antrian" class="tab-content active">
    <div class="row">
      <!-- PESANAN BARU -->
      <div class="col-md-6">
        <h5 class="mb-3">Pesanan Baru</h5>
        <% pesanan.filter(p => p.status_pesanan === 'BELUM_DIMASAK').forEach(p => {
          const menuDalamPesanan = menuPesanan.filter(m => m.id_pesanan === p.id_pesanan);
          const adaYangTidakTersedia = menuDalamPesanan.some(m => m.ketersediaan === 'TIDAK_TERSEDIA'); %>
          <div class="pesanan-card bg-kuning">
            <strong>Meja <%= p.id_meja %></strong> <span class="float-end text-muted"><%= p.jam_pesan %></span>
            <div class="mt-2 mb-3">
              <%= menuDalamPesanan.map(m => `${m.jumlah}x ${m.nama_menu}`).join(', ') %>
            </div>
            <button class="btn btn-kuning w-100" onclick="updateStatus('<%= p.id_pesanan %>', '<%= id_koki %>', 'SEDANG_DIMASAK')" <%= adaYangTidakTersedia ? 'disabled' : '' %>>
              <%= adaYangTidakTersedia ? 'Tunggu Konfirmasi Pelayan' : 'Mulai Masak' %>
            </button>
          </div>
        <% }) %>
      </div>

      <!-- SEDANG DIMASAK -->
      <div class="col-md-6">
        <h5 class="mb-3">Sedang Dimasak</h5>
        <% pesanan.filter(p => p.status_pesanan === 'SEDANG_DIMASAK').forEach(p => { %>
          <div class="pesanan-card bg-biru">
            <strong>Meja <%= p.id_meja %></strong> <span class="float-end text-muted"><%= p.jam_pesan %></span>
            <div class="mt-2 mb-3">
              <%= menuPesanan.filter(m => m.id_pesanan === p.id_pesanan).map(m => `${m.jumlah}x ${m.nama_menu}`).join(', ') %>
            </div>
            <button class="btn btn-hijau w-100" onclick="updateStatus('<%= p.id_pesanan %>', '<%= id_koki %>', 'SIAP_DISAJIKAN')">Selesai Masak</button>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

  <!-- TAB: KETERSEDIAAN -->
  <div id="tab-ketersediaan" class="tab-content">
    <% const belumDimasakId = pesanan.filter(p => p.status_pesanan === 'BELUM_DIMASAK').map(p => p.id_pesanan);
      const menuTersedia = menuPesanan.filter(m => belumDimasakId.includes(m.id_pesanan));
      const grouped = {};
      menuTersedia.forEach(m => {
        if (!grouped[m.id_pesanan]) grouped[m.id_pesanan] = [];
        grouped[m.id_pesanan].push(m);
      });

      for (const id_pesanan in grouped) {
        const pesananData = pesanan.find(p => p.id_pesanan == id_pesanan); %>
        <div class="pesanan-card bg-kuning">
          <h6>Meja <%= pesananData.id_meja %> <span class="float-end text-muted"><%= pesananData.jam_pesan %></span></h6>
          <% grouped[id_pesanan].forEach(m => { %>
            <div class="d-flex justify-content-between align-items-center bg-white p-2 rounded mb-2 border">
              <strong><%= m.jumlah %>x <%= m.nama_menu %></strong>
              <select class="form-select w-auto" onchange="updateKetersediaan('<%= m.id_menu %>', '<%= m.id_pesanan %>', this)">
                <option value="TERSEDIA" <%= m.ketersediaan === 'TERSEDIA' ? 'selected' : '' %>>Tersedia</option>
                <option value="TIDAK_TERSEDIA" <%= m.ketersediaan === 'TIDAK_TERSEDIA' ? 'selected' : '' %>>Tidak Tersedia</option>
              </select>
            </div>
          <% }) %>
        </div>
    <% } %>
  </div>

  <script src="/javascripts/koki.js"></script>
</body>
</html>
