<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap');
      body { font-family: "Quicksand", sans-serif }
    </style>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-sm bg-white">
      <div class="container">
        <h5 class="m-0"><%= title %></h5>
        <form action="kasir/logout" method="post">
          <button type="submit" class="btn btn-danger">Logout</button>
        </form>
      </div>
    </nav>

    <div class="container p-2 pt-4">
      <!-- Stat card -->
      <div class="row mb-4">
        <div class="col d-flex align-items-center border rounded p-2 mx-2 bg-white">
          <h5 class="flex-grow-1 m-0">Menunggu Bayar</h5>
          <h1 class="text-warning m-0"><%= pesanan.filter(p=> p.status_pesanan === 'SUDAH_DISAJIKAN').length %></h1>
        </div>
        <div class="col d-flex align-items-center border rounded p-2 mx-2 bg-white">
          <h5 class="flex-grow-1 m-0">Pendapatan Hari Ini</h5>
          <h1 class="text-success m-0">Rp <%= riwayatPembayaran.reduce((sum, p)=> sum + p.harga_total, 0).toLocaleString('id-ID') %></h1>
        </div>
      </div>

      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-bs-toggle="tab" href="#proses-pembayaran">Proses Pembayaran</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-bs-toggle="tab" href="#riwayat-pembayaran">Riwayat Pembayaran</a>
        </li>
      </ul>
    </div>

    <!-- Tab panes -->
    <div class="tab-content">
      <!-- Tab proses pembayaran -->
      <div id="proses-pembayaran" class="container tab-pane active"><br>
        <div class="row">
          <!-- Kolom Menunggu Pembayaran -->
          <div class="col">
            <h5 class="mb-3">Menunggu Pembayaran</h5>
            <% const pesananSudahDisajikan = pesanan.filter(p=> p.status_pesanan === 'SUDAH_DISAJIKAN');
              if (pesananSudahDisajikan.length === 0) { %>
              <p class="text-muted">Tidak ada pesanan yang menunggu pembayaran.</p>
            <% } else {
              pesananSudahDisajikan.forEach(p => { %>
                <div class="border rounded p-2 mb-3 bg-white">
                  <strong>Meja <%= p.id_meja %></strong><span class="float-end text-muted"><%= new Date(p.waktu_pesan).toLocaleString('id-ID') %></span>
                  <div class="mt-2 mb-3">
                    <% menuPesanan.filter(m=> m.id_pesanan === p.id_pesanan).forEach(m => { %>
                    <div><%= m.jumlah %>x <%= m.nama_menu %> - Rp <%= m.sub_total.toLocaleString('id-ID') %></div>
                    <% }) %>
                  </div>
                  <h5>Total: Rp <%= p.total_harga.toLocaleString('id-ID') %></h5>
                  <button class="btn btn-primary btn-bayar w-100" id="btn-<%= p.id_pesanan %>" onclick="pilihBayar('<%= p.id_pesanan %>')">Pilih untuk Bayar</button>
                </div>
              <% }) %>
            <% } %>
          </div>

          <!-- Kolom Pembayaran Yang Dipilih -->
          <div class="col">
            <h5 class="mb-3">Detail Pembayaran</h5>
            <% pesanan.filter(p=> p.status_pesanan === 'SUDAH_DISAJIKAN').forEach(p => { %>
              <div id="detail-pembayaran-<%= p.id_pesanan %>" class="border rounded p-2 detail-pembayaran bg-white" style="display: none">
                <h4>Meja <%= p.id_meja %></h4>
                <small>
                  Pelanggan: <%= pelanggan.find(m=> m.id_pelanggan == p.id_pelanggan).nama_pelanggan %><br>
                  Waktu Pesan: <%= new Date(p.waktu_pesan).toLocaleString('id-ID') %>
                </small><br>
                <div class="mt-3 mb-3">
                  <% menuPesanan.filter(m=> m.id_pesanan == p.id_pesanan).forEach(m => { %>
                    <div class="d-flex justify-content-between">
                      <span><%= m.jumlah %>x <%= m.nama_menu %></span>
                      <span>Rp <%= m.sub_total.toLocaleString('id-ID') %></span>
                    </div>
                  <% }) %>
                </div>
                <div class="d-flex justify-content-between mb-2">
                  <strong>Total:</strong>
                  <strong>Rp <%= p.total_harga.toLocaleString('id-ID') %></strong>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                  <button class="btn btn-primary w-100 me-1" onclick="prosesPembayaran('<%= p.id_pesanan %>', '<%= id_kasir %>', '<%= p.id_meja %>', '<%= p.id_pelanggan %>', '<%= p.total_harga %>', '<%= p.waktu_pesan %>')">Proses Pembayaran</button>
                  <button class="btn btn-warning w-100 ms-1" onclick="cetakNota('<%= p.id_pesanan %>')">Cetak Nota</button>
                </div>
              </div>
            <% }) %>
            <div class="text-muted" id="placeholder">Pilih pesanan dari daftar di sebelah kiri untuk memulai proses pembayaran</div>
          </div>
        </div>
      </div>

      <!-- Tab Riwayat Pembayaran -->
      <div id="riwayat-pembayaran" class="container tab-pane fade"><br>
        <h5 class="mb-3">Riwayat Pembayaran Hari Ini</h5>
        <% if (riwayatPembayaran && riwayatPembayaran.length> 0) { %>
          <% riwayatPembayaran.forEach(r => { %>
            <div class="border rounded p-2 mb-3 bg-white">
              <div class="d-flex justify-content-start align-items-center">
                <div class="flex-grow-1">
                  <strong>Meja <%= r.id_meja %> - <%= r.nama_pelanggan %></strong><br>
                  <small>
                    Kasir: <%= r.nama_kasir %><br>
                    Waktu Bayar: <%= new Date(r.waktu_bayar).toLocaleString('id-ID') %>
                  </small><br>
                  <%= r.menu_pesanan %>
                </div>
                <h3>Rp <%= r.harga_total.toLocaleString('id-ID') %><h3>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-muted">Belum ada riwayat pembayaran hari ini.</p>
        <% } %>
      </div>
    </div>

    <script src="/javascripts/kasir.js"></script>
  </body>
</html>
